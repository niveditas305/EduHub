<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ContinueDetails">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:id="@+id/ivback"
            android:layout_height="match_parent"/>



        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_gravity="center"
            android:fontFamily="@font/semi"
            android:text="Mathematics"
             android:textColor="@color/white"
            android:textSize="@dimen/text_15" />



    </androidx.appcompat.widget.Toolbar>

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_below="@+id/tool_layout"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="wrap_content">


       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:background="@color/d_grey"
           android:layout_height="match_parent">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/bold"
                   android:layout_gravity="center"
                   android:layout_margin="@dimen/padding_10"
                   android:textSize="@dimen/text17"
                   android:gravity="center"
                   android:textColor="@color/white"
                   android:text="Continue | Fractions"
                   />





       </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/padding_10"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi"
            android:text="Tutorials"
            android:textColor="@color/black"
            android:textSize="@dimen/text17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:drawableRight="@drawable/down_arrow"
            android:fontFamily="@font/semi"
            android:drawablePadding="@dimen/padding_10"
            android:layout_marginLeft="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_15"
            android:paddingRight="@dimen/padding_15"
            android:paddingTop="@dimen/margin_8"
            android:paddingBottom="@dimen/margin_8"
            android:text="Number Theory"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/text_15" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/padding_10"
        android:id="@+id/rv_tutorials"

        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grey"
         android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_10"
        android:fontFamily="@font/semi"
         android:layout_marginLeft="@dimen/padding_10"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15"
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8"
        android:text="Load more"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/text_15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semi"
        android:text="Chapter"
        android:textColor="@color/black"
        android:textSize="@dimen/text17" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/padding_10"
            android:id="@+id/rv_chapters"

            android:layout_height="wrap_content"/>



    </RelativeLayout>

</LinearLayout>

       </LinearLayout>
   </androidx.core.widget.NestedScrollView>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"

        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/padding_10"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_search" />
</RelativeLayout>