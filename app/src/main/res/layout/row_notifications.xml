<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_10">

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_10"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/img_left_"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/user" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_left_"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_notification_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_below="@+id/txt_name"
                android:layout_alignLeft="@+id/txt_name"
                android:fontFamily="@font/regular"
                 android:paddingEnd="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:text="You have receive request for hair cutting"
                android:textColor="@color/black"
                android:textSize="@dimen/text_13" />


            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/regular"
                android:paddingEnd="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:layout_marginTop="@dimen/margin_5"
                android:text="Today | 11:00 PM"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_13" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:background="@color/grey" />

</LinearLayout>