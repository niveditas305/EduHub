<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/dots"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_below="@+id/pager"
                android:layout_marginTop="-40dp"
                app:tabBackground="@drawable/dot_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                app:tabPaddingStart="7dp"
                app:tabPaddingEnd="7dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/pager"
                android:id="@+id/ll_section"
                android:weightSum="1"

                android:layout_marginTop="@dimen/margin_20"
                android:layout_height="130dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/bold"
                    android:layout_weight=".5"
                    android:background="@color/colorPrimaryDark"
                    android:paddingTop="@dimen/margin_30"
                    android:layout_gravity="center"
                    android:drawableTop="@drawable/ic_science"
                    android:textSize="@dimen/text_21"
                    android:drawablePadding="@dimen/padding_10"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="Science"
                    />   <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/bold"
                android:id="@+id/tv_main_two"
                android:background="@color/textcolor"
                android:paddingTop="@dimen/margin_30"
                android:layout_weight=".5"
                android:drawablePadding="@dimen/padding_10"
                android:layout_gravity="center"
                android:drawableTop="@drawable/ic_math"
                android:textSize="@dimen/text_21"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Mathematics"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/ll_one"
                 android:layout_below="@+id/ll_section"
                android:weightSum="1"
                android:layout_height="100dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_10"
                    android:textSize="@dimen/text17"
                    android:gravity="center"
                    android:textColor="@color/textcolor"
                    android:text="Learning Analysis"
                    />
                <View
                    android:layout_width="1dp"
                    android:background="@color/textcolor"
                    android:layout_height="90dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_10"
                    android:textSize="@dimen/text17"
                    android:gravity="center"
                    android:textColor="@color/textcolor"
                    android:text="Recently Learned"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/ll_two"
                 android:layout_below="@+id/ll_one"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_10"
                    android:textSize="@dimen/text_15"
                    android:gravity="center"
                    android:textColor="@color/textcolor"
                    android:text="Continue :"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/padding_10"
                    android:textSize="@dimen/text_15"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Fractions"
                    />
            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:layout_below="@+id/ll_two"
                android:layout_margin="@dimen/padding_10"
                android:textSize="@dimen/text_19"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Top Picks"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_below="@+id/ll_two"
                android:textSize="@dimen/text_15"
                android:textColor="@color/textcolor"
                android:text="What other students of your grade are studying"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/padding_10"
                android:id="@+id/rv_top_home"

                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:layout_below="@+id/ll_two"
                android:layout_margin="@dimen/padding_10"
                android:textSize="@dimen/text_19"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Top Rated Tutor"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:textSize="@dimen/text_15"
                    android:textColor="@color/textcolor"
                    android:text="Hire tutor for grade up your skills"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/text_15"
                    android:textColor="@color/colorPrimary"
                    android:text="See all"/>

            </RelativeLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_margin="@dimen/padding_10"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_5"
                    android:layout_weight=".5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:background="@drawable/round_ed_stroke_black"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/user"
                        android:id="@+id/iv"
                        android:layout_centerVertical="true"
                        android:layout_height="50dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_below="@+id/ll_top"
                        android:id="@+id/ll_three"
                        android:layout_toRightOf="@+id/iv"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_10"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:layout_centerVertical="true"

                                android:id="@+id/tv_name"
                                android:layout_toLeftOf="@+id/iv_heart"
                                android:textSize="@dimen/text_15"
                                android:textColor="@color/black"
                                android:text="Sara"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:src="@drawable/ic_heart"
                                android:layout_centerVertical="true"
                                android:id="@+id/iv_heart"
                                android:layout_alignParentRight="true"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:layout_centerVertical="true"

                            android:textSize="@dimen/text_11sp"
                            android:textColor="@color/textcolor"
                            android:text="Mathematics"
                            />   <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:layout_centerVertical="true"

                        android:textSize="@dimen/text_11sp"
                        android:textColor="@color/textcolor"
                        android:text="5 years Experience"
                        /> <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/ic_star_fil"
                        android:drawablePadding="@dimen/padding_10"
                        android:textSize="@dimen/text_11sp"
                        android:textColor="@color/textcolor"
                        android:text="4.5"
                        />
                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_5"
                    android:layout_weight=".5"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:background="@drawable/round_ed_stroke_black"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/user"
                        android:id="@+id/iv_"
                        android:layout_centerVertical="true"
                        android:layout_height="50dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/ll_three_"
                        android:layout_toRightOf="@+id/iv_"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_10"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:layout_centerVertical="true"

                                android:id="@+id/tv_name_"
                                android:layout_toLeftOf="@+id/iv_heart_"
                                android:textSize="@dimen/text_15"
                                android:textColor="@color/black"
                                android:text="Sara"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:src="@drawable/ic_heart"
                                android:layout_centerVertical="true"
                                android:id="@+id/iv_heart_"
                                android:layout_alignParentRight="true"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:layout_centerVertical="true"

                            android:textSize="@dimen/text_11sp"
                            android:textColor="@color/textcolor"
                            android:text="Mathematics"
                            />   <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:layout_centerVertical="true"

                        android:textSize="@dimen/text_11sp"
                        android:textColor="@color/textcolor"
                        android:text="5 years Experience"
                        /> <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/ic_star_fil"
                        android:drawablePadding="@dimen/padding_10"
                        android:textSize="@dimen/text_11sp"
                        android:textColor="@color/textcolor"
                        android:text="4.5"
                        />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/ic_search"
                android:layout_gravity="right"
                android:layout_margin="@dimen/padding_10"
                android:layout_centerVertical="true"
                android:layout_height="50dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>