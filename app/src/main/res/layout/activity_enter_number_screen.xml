<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ForgotPassword">
    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/margin_30"
            android:layout_centerInParent="true"
            android:orientation="vertical">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_button"
                android:layout_gravity="center"
                android:src="@drawable/ic_logob"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_30"
                android:layout_marginLeft="@dimen/padding_15"
                android:layout_marginRight="@dimen/padding_15"
                android:layout_marginBottom="@dimen/padding_15"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                     android:textSize="@dimen/text25"
                    android:paddingBottom="@dimen/margin_5"
                    android:paddingTop="@dimen/margin_5"
                     android:textColor="@color/black"
                    android:text="@string/verify_your_number"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/please_enter_your_country_and_your_number"
                    android:textSize="@dimen/text_15"

                      android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/regular"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@drawable/roundsolidgrey"
                    android:baselineAligned="false"
                    android:maxLength="13"
                    android:drawableLeft="@drawable/ic_call"
                    android:drawablePadding="@dimen/padding_10"
                    android:fontFamily="@font/regular"
                    android:hint="Enter Mobile No."
                    android:inputType="number"
                    android:padding="@dimen/padding_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_send"
                    android:layout_gravity="center"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:paddingTop="@dimen/padding_15"
                    android:layout_marginTop="@dimen/margin_20"
                    android:paddingBottom="@dimen/padding_15"
                    android:paddingLeft="@dimen/margin_side_button"
                    android:paddingRight="@dimen/margin_side_button"
                    android:textSize="@dimen/text17"
                    android:background="@drawable/round_ed"
                    android:textColor="@color/white"
                    android:text="Send"
                    />








            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>