<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/rv_parent"
    android:layout_height="wrap_content">
    <LinearLayout
         android:layout_width="230dp"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_8"

        android:background="@drawable/round_ed_stroke_cornerles"
        android:layout_height="230dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_top"
            android:padding="@dimen/margin_8"
            android:orientation="vertical"
             android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_pdf"
                android:minLines="1"
                android:textSize="@dimen/text17"
                android:textColor="@color/black"
                android:text="Unitary...."
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/padding_10"
                android:id="@+id/iv_pdf"
                android:src="@drawable/ic_pdf"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:textSize="@dimen/text_13"
            android:padding="@dimen/margin_8"
            android:minLines="2"
            android:textColor="@color/textcolor"
            android:text="@string/lipsumshort"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/ll_top"
            android:layout_height="wrap_content"
             android:background="@color/grey"
            android:paddingBottom="@dimen/margin_20"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="@dimen/margin_8"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:minLines="1"
android:layout_toLeftOf="@+id/tv_rating"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/black"
                    android:text="Mr. James"
                    /> <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:id="@+id/tv_rating"
                android:drawablePadding="@dimen/padding_10"
android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/ic_star_fil"
                android:textSize="@dimen/text_15"
                android:textColor="@color/black"
                android:text="4.5"
                />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
 android:paddingLeft="@dimen/padding_10"
                android:textSize="@dimen/text_13"
                android:textColor="@color/colorPrimary"
                android:text="View Profile"
                />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>