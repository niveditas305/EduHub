<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:id="@+id/rv_parent"
    android:layout_margin="@dimen/padding_10"

    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/semi_round_ed_stroke"
        android:orientation="horizontal">


<RelativeLayout
    android:layout_width="wrap_content"
    android:id="@+id/rv"

    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/_70sdp"
         android:id="@+id/iv"
         android:background="@drawable/roundc_corner_solid_bg"
        android:backgroundTint="@color/colorAccent"
        android:layout_centerVertical="true"
        android:layout_height="@dimen/_70sdp"/>
    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:src="@drawable/school"
        android:layout_centerInParent="true"
        android:layout_height="@dimen/_50sdp"/>
</RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
             android:id="@+id/ll_three"
            android:layout_toRightOf="@+id/rv"

            android:layout_toLeftOf="@+id/rv_"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_10"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_15"
                android:minLines="1"
                android:id="@+id/tv_chapter_name"
                android:maxLines="1"
                android:textColor="@color/black"
                android:text="01 Foundation Concept"/>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi"
                android:id="@+id/tv_topic_count"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/padding_10"
            android:textSize="@dimen/text17"
            android:textColor="@color/black"
            android:text="3 topics"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_subtopic"
                android:layout_marginTop="@dimen/margin_20"
                android:visibility="gone"
                android:orientation="vertical">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/padding_10"
                        android:id="@+id/rv_topics"

                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:textSize="@dimen/text17"
                        android:id="@+id/no_record_found"
                        android:text="@string/no_record_found"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/rv_"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/down_arrow"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/padding_10"
            android:id="@+id/iv_down"
app:tint="@color/red"
            android:layout_height="30dp"/>
        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/up_arrow"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginTop="@dimen/padding_10"
            android:id="@+id/iv_up"
            android:layout_height="30dp"/>

    </RelativeLayout>
    </RelativeLayout>
 </RelativeLayout>