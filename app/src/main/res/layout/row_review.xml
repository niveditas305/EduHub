<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/semi_round_ed_stroke"
    android:orientation="horizontal"
    android:layout_margin="@dimen/padding_10"
    android:padding="@dimen/padding_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_user_image"
        android:layout_width="80dp"
        android:src="@drawable/profile"
        android:layout_gravity="center"
        android:layout_height="80dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_toRightOf="@+id/iv_user_image"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Emma"
            android:id="@+id/tv_name"
            android:textColor="@color/black"
            android:gravity="left"
            android:textSize="@dimen/text17"
            android:fontFamily="@font/bold"
            android:layout_height="wrap_content"/>

        <com.fuzzproductions.ratingbar.RatingBar
            android:id="@+id/rating_bar_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            app:emptyDrawable="@drawable/ic_star_unfill"
            app:filledDrawable="@drawable/ic_star_fil"
            app:isIndicator="true"
            app:minAllowedStars="0"
            android:clickable="false"
            app:numStars="5"

            app:starMargin="10dp"
            app:starSize="15dp" />



        <TextView
            android:layout_width="wrap_content"
            android:text="@string/lipsumshort"
            android:id="@+id/tv_review"
            android:textColor="@color/black"

            android:gravity="left"
            android:layout_marginTop="@dimen/margin_5"
            android:textSize="@dimen/text14"
            android:fontFamily="@font/regular"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>